<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="appBackgroundColor" format="reference|color" />
    <!-- Base application theme. -->
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="appBackgroundColor">#fad59a</item>
        <item name="android:windowBackground">?attr/appBackgroundColor</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coffee_2</item>
        <item name="colorPrimaryVariant">@color/coffee_2</item>
        <item name="colorOnPrimary">@color/your_background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coffee_3</item>
        <item name="colorSecondaryVariant">@color/dark_roast</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/CustomNavigationButtonStyle</item>
    </style>

    <style name="CustomNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNav" parent="ThemeOverlay.MaterialComponents">
        <!-- Disables elevation overlay in dark mode -->
        <item name="elevationOverlayEnabled">false</item>
        <!-- Optional: If colorSurface interferes -->
        <item name="colorSurface">@null</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Increase label size -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="NavDrawerItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item> <!-- Adjust size as needed -->
    </style>

    <style name="SettingsMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item> <!-- Larger padding -->
        <item name="android:textSize">18sp</item> <!-- Larger text -->
        <item name="android:textColor">#5D4037</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>