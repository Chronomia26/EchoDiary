<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fourmain"
    android:padding="16dp">

    <!-- Date -->

    <!-- Character Icon -->

    <!-- Talk with Echo Text -->

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="April 27, 2025"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/echobot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_text" />

    <TextView
        android:id="@+id/talk_with_echo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk with echo!"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/character_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Recording Section -->
    <LinearLayout
        android:id="@+id/recording_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE0B2"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/talk_with_echo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/recording_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording: 12hrs 17mins"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#CC8E35" />

    </LinearLayout>

    <!-- DayTrace Activity Log Title -->
    <TextView
        android:id="@+id/daytrace_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DayTrace Activity Log"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/recording_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Sample Activity Item -->
    <LinearLayout
        android:id="@+id/activity_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF3E0"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/daytrace_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chat_24px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:54 PM | Opened Messages"
            android:textSize="16sp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_task_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF8E1"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/activity_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>