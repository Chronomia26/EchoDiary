<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for current day (e.g., solid fill) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFE4B5"/> <!-- example fill -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <!-- Border for selected day -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FF5722"/> <!-- example border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
