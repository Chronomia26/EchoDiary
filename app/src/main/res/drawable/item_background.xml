<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First deeper shadow -->
    <item android:left="2dp" android:right="2dp" android:top="0dp" android:bottom="10dp">
        <shape>
            <solid android:color="#66000000" />
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Second subtle blur layer (optional for depth) -->
    <item android:left="1dp" android:right="1dp" android:top="0dp" android:bottom="6dp">
        <shape>
            <solid android:color="#33000000" />
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <!-- Main foreground card -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/>
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" />
        </shape>
    </item>
</layer-list>
